<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <!-- Warung Image -->
    <ImageView
        android:id="@+id/gambar_warter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp"/>



        <TextView
            android:id="@+id/warung_warter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ngaran warung"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/gambar_warter"
            android:layout_toRightOf="@+id/gambar_warter"
            android:paddingRight="2dp"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/alamat_warter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/gambar_warter"
            android:layout_toEndOf="@id/gambar_warter"
            android:layout_below="@+id/warung_warter"
            android:text="alamt"
            android:paddingRight="2dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/jarak_warter"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="jarak"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"

            />


</RelativeLayout>